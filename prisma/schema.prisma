generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @unique
  email        String
  firstName    String
  lastName     String
  profileImage String

  orders Order[]

  createdAt DateTime @default(now())
}

model Product {
  id          String        @id @default(uuid())
  name        String
  description String
  gender      Gender
  originalprice       Int
  discountprice       Int
  images      String[]
  category    Category
  isFeatured  Boolean       @default(false)
  stars       Decimal
  reviews     Int
  status      Status
  

  createdAt DateTime @default(now())
}


model Order {
  id     String @id @default(uuid())
  status String @default("pending")
  amount Int

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  createdAt DateTime @default(now())
}


model Banner {
  id          String @id @default(uuid())
  title       String
  imageString String
  pricing       String  
  

  createdAt DateTime @default(now())
}

model TopBanner {
  id          String @id @default(uuid())
  title       String
  imageString String
  description       String
  subtext       String

  

  createdAt DateTime @default(now())
}


model BottomBanner {
  id          String @id @default(uuid())
  title       String
  imageString String
  subtext       String  
  

  createdAt DateTime @default(now())
}

model variables {
  id       String @id @default(uuid()) 
  daytime   Int  @default(24)
  lastdate  DateTime    @default(now())  

}


model discount {
  id       String @id @default(uuid()) 
  discount  Int    
}


enum Gender {
  Men
  Women
  Kids
  Unisex
  
}

enum Category {
  Fashion
  Luxury
}

enum Status {
  Dealoftheday
  TrendingProduct
  NewArrival
  None
}